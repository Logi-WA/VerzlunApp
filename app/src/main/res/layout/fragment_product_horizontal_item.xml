<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Using MaterialCardView for easy styling -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/productCardHorizontal"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="0dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/product_img_horizontal"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/md_theme_surfaceContainerLow"
                android:padding="4dp"
                android:scaleType="centerInside" />
            <!--                tools:srcCompat="@drawable/placeholder_image"-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/productNameHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:minLines="2"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="@color/md_theme_onSurface"
                    android:textStyle="bold"
                    tools:text="Product Name Here Very Long Product Name" />

                <TextView
                    android:id="@+id/productPriceHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:textColor="@color/md_theme_primary"
                    android:textStyle="bold"
                    tools:text="â‚¬99.99" />

                <!-- Optional: Add rating or other small details -->
                <TextView
                    android:id="@+id/productRatingHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="4dp"
                    android:drawableStart="@drawable/star_24px"
                    android:drawablePadding="4dp"
                    android:drawableTint="@color/md_theme_secondary"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    tools:text="4.5" />

            </LinearLayout>

            <!-- Buttons Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:paddingBottom="4dp">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/addToWishlistHorizontal"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:icon="@drawable/favorite_24px"
                        app:iconSize="20dp"
                        app:iconTint="@color/md_theme_secondary" />
                </FrameLayout>

                <!-- FrameLayout for Cart -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/addToCartHorizontal"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:icon="@drawable/add_shopping_cart_24px"
                        app:iconSize="20dp"
                        app:iconTint="@color/md_theme_primary" />
                </FrameLayout>
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>