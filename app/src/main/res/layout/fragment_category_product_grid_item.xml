<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/productCardGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="0dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/product_img_grid"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:background="@color/md_theme_surfaceContainerLow"
                android:padding="4dp"
                android:scaleType="centerInside"
                tools:srcCompat="@drawable/add_24px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:paddingTop="10dp"
                android:paddingEnd="12dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/productNameGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:minLines="2"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="@color/md_theme_onSurface"
                    android:textStyle="bold"
                    tools:text="Product Name Here Very Long Product Name" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/productPriceGrid"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="@color/md_theme_primary"
                        android:textStyle="bold"
                        tools:text="â‚¬99.99" />

                    <!-- Optional: Rating -->
                    <TextView
                        android:id="@+id/productRatingGrid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:drawableStart="@drawable/star_24px"
                        android:drawablePadding="2dp"
                        android:drawableTint="@color/md_theme_secondary"
                        android:gravity="center_vertical"
                        android:textSize="12sp"
                        tools:text="4.5" />

                </LinearLayout>

            </LinearLayout>

            <!-- Buttons Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:paddingBottom="0dp">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/addToWishlistGrid"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:icon="@drawable/favorite_24px"
                    app:iconTint="@color/md_theme_secondary" />
                </FrameLayout>

                <!-- FrameLayout container for Cart Button -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/addToCartGrid"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:icon="@drawable/add_shopping_cart_24px"
                    app:iconTint="@color/md_theme_primary" />
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>